<div class="bg-white rounded-lg border border-gray-200 shadow-sm dark:bg-gray-800 dark:border-gray-700">
  <%= link_to image_tag(artist.avatar, class: "p-4 w-full rounded-lg", alt: "#{artist.full_name}"), artist %>
  <div class="px-5 pb-5">
    <h3 class="text-xl font-bold tracking-tight text-gray-900 dark:text-white">
      <%= link_to artist.full_name, artist %>
    </h3>
    <span class="text-gray-500"><%= artist.alternate_name %></span>
    <p class="mt-3 mb-4 font-light text-gray-500 dark:text-gray-400"><%= artist.description %></p>
  </div>
</div>
